@model asp_project.Models.ViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Trang chủ - Maliketh Fashion";
}

<style>
    /* --- 1. CẤU HÌNH CHUNG --- */
    .full-width-container {
        width: 100%;
        padding: 0;
        margin: 0;
        overflow-x: hidden;
    }

    /* --- 2. HERO BANNER --- */
    .hero-banner img {
        width: 100%;
        height: auto;
        max-height: 550px; /* Chiều cao banner */
        object-fit: cover;
    }

    /* --- 3. DANH MỤC (CATEGORY) - ĐÃ SỬA LỖI CO LẠI --- */
    .category-section {
        background-color: #fff;
        padding: 2rem 0;
        border-bottom: 1px solid #eee;
        width: 100%;
    }

    .section-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .section-header h2 {
        font-size: 1.5rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #333;
        display: inline-block;
        border-bottom: 3px solid #dc3545;
        padding-bottom: 5px;
    }

    .category-grid {
        display: grid;
        width: 100%;
        gap: 15px;
        padding: 0 15px; /* Padding nhẹ 2 bên */
        
        /* Mobile: 2 cột */
        grid-template-columns: repeat(2, 1fr);
    }

    /* Tablet: 3 cột */
    @@media (min-width: 768px) {
        .category-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* PC: 6 CỘT ĐỀU NHAU -> GIÚP DÀN TRẢI HẾT MÀN HÌNH */
    @@media (min-width: 992px) {
        .category-grid {
            grid-template-columns: repeat(6, 1fr);
            gap: 20px;
        }
    }

    .category-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #333;
        background: #fff;
        border: 1px solid #f0f0f0;
        border-radius: 8px;
        padding: 20px;
        transition: all 0.3s ease;
        height: 100%;
    }

    .category-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-color: #dc3545;
        color: #dc3545;
        z-index: 2;
    }

    .category-item img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
        background-color: #f8f9fa;
    }

    .category-item span {
        font-size: 0.95rem;
        font-weight: 600;
        text-align: center;
    }

    /* --- 4. THẺ SẢN PHẨM (PRODUCT CARD) --- */
    .product-card {
        transition: all 0.3s ease;
        border-radius: 10px;
        overflow: hidden;
        background: white;
        border: 1px solid #e9ecef;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        border-color: #adb5bd;
    }

    .card-img-wrapper {
        height: 220px;
        overflow: hidden;
        position: relative;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-img-top {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        padding: 15px;
        transition: transform 0.3s;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }

    /* Badge Styles */
    .badge-sold {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #dc3545;
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        z-index: 10;
    }

    .badge-recommend {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #0d6efd;
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        z-index: 10;
    }

    .product-title a {
        color: #333;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }

    .product-title a:hover {
        color: #dc3545;
    }
</style>

<!-- ========================================= -->
<!-- 1. HERO BANNER (FULL WIDTH) -->
<!-- ========================================= -->
<div class="full-width-container">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active hero-banner">
                <img src="https://images.unsplash.com/photo-1763328719057-ff6b03c816d0?q=80&w=1170&auto=format&fit=crop" class="d-block w-100" alt="Sale">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="display-5 fw-bold">SUMMER SALE</h5>
                    <p class="fs-5">Giảm giá lên đến 50%.</p>
                </div>
            </div>
            <div class="carousel-item hero-banner">
                <img src="https://images.unsplash.com/photo-1763328696733-8444f67e8af2?q=80&w=1170&auto=format&fit=crop" class="d-block w-100" alt="New Collection">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="display-5 fw-bold">NEW COLLECTION</h5>
                    <p class="fs-5">Bộ sưu tập Thu-Đông mới nhất.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
</div>

<!-- ========================================= -->
<!-- 2. DANH MỤC (ĐÃ SỬA TRÀN VIỀN) -->
<!-- ========================================= -->
