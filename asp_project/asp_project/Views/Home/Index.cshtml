        <div class="section-header">
            <h2>DANH MỤC</h2>
        </div>
        <div class="category-grid">
            <a href="#" class="category-item">
                <img src="https://images.unsplash.com/photo-1559697242-a465f2578a95?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Nam">
                <span>Thời Trang Nam</span>
            </a>
            <a href="#" class="category-item">
                <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Nữ">
                <span>Thời Trang Nữ</span>
            </a>
            <a href="#" class="category-item">
                <img src="https://plus.unsplash.com/premium_photo-1698305282759-0d295cbb96d6?q=80&w=681&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Trẻ Em">
                <span>Thời Trang Trẻ Em</span>
            </a>
            <a href="#" class="category-item">
                <img src="https://images.unsplash.com/photo-1694618050940-3560f5c61938?q=80&w=1074&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Giày Dép">
                <span>Giày Dép</span>
            </a>
            <a href="#" class="category-item">
                <img src="https://images.unsplash.com/photo-1682031215004-161c99d5b225?q=80&w=738&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Túi Xách">
                <span>Túi Xách & Ví</span>
            </a>
            <a href="#" class="category-item">
                <img src="https://images.pexels.com/photos/190819/pexels-photo-190819.jpeg?auto=compress&cs=tinysrgb&h=80" alt="Phụ Kiện">
                <span>Phụ Kiện & ĐH</span>
            </a>
        </div>
    </div>
</div>

<!-- ========================================= -->
<!-- 3. TOP BÁN CHẠY -->
<!-- ========================================= -->
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-uppercase text-danger">
            <i class="bi bi-fire"></i> Top Bán Chạy
        </h2>
        <a href="#" class="text-decoration-none text-secondary">Xem tất cả <i class="bi bi-chevron-right"></i></a>
    </div>

    @if (Model.TopSellingProducts == null || !Model.TopSellingProducts.Any())
    {
        <div class="alert alert-info text-center p-4 border border-dashed">
            <p class="h6 text-muted">Chưa có dữ liệu bán chạy.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3 justify-content-center">
            @foreach (var item in Model.TopSellingProducts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <span class="badge-sold">Đã bán @item.DaBan</span>
                        <a href="/ProductPage/Details/@item.ProductId" class="card-img-wrapper">
                            <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenSanPham" onerror="this.src='https://placehold.co/400x400?text=No+Image'">
                        </a>
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title product-title text-truncate mb-2">
                                <a href="/ProductPage/Details/@item.ProductId" title="@item.TenSanPham">@item.TenSanPham</a>
                            </h6>
                            <div class="mt-auto">
                                <p class="card-text text-danger fw-bold fs-5 mb-2">@item.Gia.ToString("N0") ₫</p>
                                <a href="/ProductPage/Details/@item.ProductId" class="btn btn-outline-danger btn-sm w-100 rounded-pill">Mua Ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- ========================================= -->
<!-- 4. GỢI Ý SẢN PHẨM -->
<!-- ========================================= -->
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-uppercase text-primary">
            <i class="bi bi-stars"></i> 
            @if (User.Identity.IsAuthenticated)
            { <span>Gợi ý riêng cho bạn</span> }
            else
            { <span>Có thể bạn sẽ thích</span> }
        </h2>
        <a href="#" class="text-decoration-none text-secondary">Khám phá thêm</a>
    </div>

    @if (Model.RecommendedProducts != null && Model.RecommendedProducts.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3">
            @foreach (var item in Model.RecommendedProducts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <span class="badge-recommend">
                            @if(User.Identity.IsAuthenticated){ <span>Gợi ý</span> } else { <span>Mới</span> }
                        </span>
                        <a href="/ProductPage/Details/@item.ProductId" class="card-img-wrapper">
                            <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenSanPham" onerror="this.src='https://placehold.co/400x400?text=No+Image'">
                        </a>
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title product-title text-truncate mb-2">
                                <a href="/ProductPage/Details/@item.ProductId" title="@item.TenSanPham">@item.TenSanPham</a>
                            </h6>
                            <div class="mt-auto">
                                <p class="card-text text-primary fw-bold fs-5 mb-2">@item.Gia.ToString("N0") ₫</p>
                                <a href="/ProductPage/Details/@item.ProductId" class="btn btn-outline-primary btn-sm w-100 rounded-pill">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
         <div class="alert alert-light text-center text-muted">Đang cập nhật sản phẩm mới...</div>
    }
</div>