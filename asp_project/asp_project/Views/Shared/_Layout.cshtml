    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Design System & Custom Styles -->
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Custom Layout Styles -->
    <link rel="stylesheet" href="~/css/layout-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ui-enhancements.css" asp-append-version="true" />
    </head>
<body>
    <!-- Page Loader -->
    <div id="page-loader">
        <div class="loader-spinner"></div>
    </div>

    <!-- Scroll To Top -->
    <div id="scroll-to-top">
        <i class="bi bi-arrow-up"></i>
    </div>
    <!-- ============================================
         HEADER & NAVIGATION
         ============================================ -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                
                <!-- Brand Logo -->
                <a class="navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index">
                    <span>Maliketh</span> Fashion
                </a>

                <!-- Partner Button (Desktop) -->
                @if (User.Identity == null || !User.IsInRole("shop"))
                {
                    <a class="btn-partner ms-3 d-none d-lg-inline-block"
                       asp-controller="Shop" asp-action="RegisterShopView">
                        Trở thành đối tác
                    </a>
                }

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    
                    <!-- Search Form -->
                    <div class="d-flex mx-auto dropdown search-form-container">
                        <form class="search-form w-100" asp-controller="Search" asp-action="Index" method="get" role="search" id="main-search-form">
                            <input class="form-control search-input" type="search" name="q" 
                                   placeholder="Tìm kiếm sản phẩm yêu thích..." aria-label="Search"
                                   id="main-search-input" data-bs-toggle="dropdown" 
                                   data-bs-auto-close="outside" 
                                   autocomplete="off">
                            <button class="search-btn" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                        
                        <div class="dropdown-menu p-2 search-dropdown-menu" id="search-suggestions-box">
                            <div class="text-muted p-2">Nhập để tìm kiếm...</div>
                        </div>
                    </div>

                    <!-- Navigation Items -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        
                        <!-- Cart Icon -->
                        <li class="nav-item">
                            <a class="nav-link nav-icon-btn" asp-controller="Cart" asp-action="Index" title="Giỏ hàng">
                                <i class="bi bi-bag"></i>
                                <span id="cart-badge" class="badge" style="display: none;">0</span>
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- User Dropdown (Authenticated) -->
                            <li class="nav-item dropdown ms-2">
                                <a class="user-dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person user-avatar"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person-circle me-2"></i>Thông tin cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                                            <i class="bi bi-receipt me-2"></i>Đơn hàng của tôi
                                        </a>
                                    </li>

                                    @if (User.IsInRole("shop"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="MyStore" asp-action="Index">
                                                <i class="bi bi-shop me-2"></i>Quản lý Shop
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="MyStore" asp-action="Statistics">
                                                <i class="bi bi-graph-up me-2"></i>Thống kê doanh thu
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Login & Register (Guest) -->
                            <li class="nav-item ms-2">
                                <a class="btn-auth-login" asp-area="" asp-controller="Account" asp-action="Login">
                                    Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn-auth-register" asp-area="" asp-controller="Account" asp-action="Register">
                                    Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Spacer for fixed navbar -->
    <div style="height: 80px;"></div>

    <!-- ============================================
         MAIN CONTENT
         ============================================ -->
    <main role="main">
        @RenderBody()
    </main>

