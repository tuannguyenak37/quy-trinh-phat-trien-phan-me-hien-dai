<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kênh Bán Hàng</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_project.styles.css" asp-append-version="true" />

    <style>
        :root {
            --brand-color: #007bff;
            --brand-color-light: #5ca8ff;
        }
        body { background-color: #f8f9fa; }
        .dashboard-wrapper { display: flex; min-height: 100vh; }
        #sidebar {
            width: 260px;
            background-color: #343a40;
            color: #fff;
            padding: 1.5rem 1rem;
            flex-shrink: 0;
        }
        .sidebar-header {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #fff;
            text-align: center;
        }
        .sidebar-user {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1rem;
            margin-bottom: 1.5rem;
            color: #adb5bd;
            border-bottom: 1px solid #495057;
            padding-bottom: 1.5rem;
        }
        .sidebar-user i {
            font-size: 1.2rem;
            margin-right: 0.75rem;
            color: #fff;
        }
        .sidebar-user span {
            font-weight: 500;
            font-size: 0.95rem;
        }
        .sidebar-nav {
            list-style: none;
            padding-left: 0;
        }
        .sidebar-nav .nav-item {
            margin-bottom: 0.5rem;
        }
        .sidebar-nav .nav-link {
            display: flex;
            align-items: center;
            color: #adb5bd;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .sidebar-nav .nav-link i {
            font-size: 1.25rem;
            margin-right: 0.75rem;
        }
        .sidebar-nav .nav-link:hover {
            background-color: #495057;
            color: #fff;
        }
        .sidebar-nav .nav-link.active {
            background-color: var(--brand-color);
            color: #fff;
            font-weight: 500;
        }
        .sidebar-footer {
            border-top: 1px solid #495057;
            margin-top: 2rem;
            padding-top: 1rem;
        }
        #main-content {
            flex-grow: 1;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>
<body>

    <div class="dashboard-wrapper">

        <nav id="sidebar">
            <div class="sidebar-header">
                Kênh Bán Hàng
            </div>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="sidebar-user">
                    <i class="bi bi-person-circle"></i>
                    <span>@User.Identity.Name</span>
                </div>
            }
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="MyStore" asp-action="Index">
                        <i class="bi bi-grid-fill"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="Index">
                        <i class="bi bi-collection-fill"></i>
                        <span>Sản phẩm</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ShopOrder" asp-action="Index">
                        <i class="bi bi-box-seam-fill"></i> <span>Đơn hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ShopInventory" asp-action="Index">
                        <i class="bi bi-inboxes-fill"></i>
                        <span>Kho hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="MyStore" asp-action="Statistics">
                        <i class="bi bi-bar-chart-line-fill"></i>
                        <span>Thống kê</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i>
                    <span>Quay về trang chủ</span>
                </a>
            </div>
        </nav>

        <main id="main-content">

            @RenderBody()

        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const path = window.location.pathname;
            const navLinks = document.querySelectorAll(".sidebar-nav .nav-link");

            navLinks.forEach(link => {
                const linkPath = new URL(link.href).pathname;
                if (path === linkPath) {
                    link.classList.add("active");
                } else {
                    link.classList.remove("active"); // Xóa 'active' nếu nó bị hard-code
                }
            });

            // (Xử lý đặc biệt) Nếu đang ở /ShopOrder/Details/..., 
            // thì vẫn tô sáng link cha là /ShopOrder
            if (path.startsWith("/ShopOrder/Details")) {
                const link = document.querySelector('a[asp-controller="ShopOrder"][asp-action="Index"]');
                if(link) link.classList.add("active");
            }
            // (Bạn có thể thêm các logic tương tự cho /Products/Edit, ...)
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>