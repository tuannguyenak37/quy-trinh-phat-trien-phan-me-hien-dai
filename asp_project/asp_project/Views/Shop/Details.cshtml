@model asp_project.Models.ViewModels.ShopDetailsViewModel

@{
    ViewData["Title"] = Model.Shop.ShopName;
}

<style>
    /* ============================================
       SHOP DETAILS PAGE - ARTISTIC DESIGN
       ============================================ */
    
    /* Shop Header - Banner Style */
    .shop-header-section {
        position: relative;
        background: radial-gradient(circle at center, #1A1A1A 0%, #0A0A0A 100%);
        color: white;
        padding: 5rem 0 3rem;
        margin-bottom: 3rem;
        overflow: hidden;
    }
    
    .shop-header-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23D4AF37' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.2;
    }
    
    .shop-info-wrapper {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .shop-avatar-large {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid #D4AF37;
        box-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
        margin-bottom: 1.5rem;
        object-fit: cover;
        background: #fff;
    }
    
    .shop-name {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #FFFFFF 0%, #E0E0E0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .shop-verified {
        color: #D4AF37;
        font-size: 1.25rem;
        margin-left: 0.5rem;
    }
    
    .shop-stats {
        display: flex;
        gap: 2rem;
        margin-top: 1.5rem;
        justify-content: center;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-value {
        font-family: 'Inter', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
    }
    
    .stat-label {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .shop-divider {
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, transparent, #D4AF37, transparent);
        margin: 1.5rem auto;
    }
    
    .shop-description {
        max-width: 600px;
        color: rgba(255, 255, 255, 0.8);
        font-style: italic;
        margin: 0 auto 1.5rem;
    }
    
    .shop-contact {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-top: 1rem;
    }
    
    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
    }
    
    .contact-item i {
        color: #D4AF37;
    }
    
    /* Product Grid */
    .shop-products-section {
        padding-bottom: 5rem;
    }
    
    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #E0E0E0;
    }
    
    .products-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.75rem;
        color: #0A0A0A;
    }
    
    .filter-options {
        display: flex;
        gap: 1rem;
    }
    
    .empty-shop-state {
        text-align: center;
        padding: 4rem;
        background: #F9F9F9;
        border-radius: 16px;
        border: 2px dashed #E0E0E0;
    }
    
</style>

<!-- ============================================
     SHOP HEADER
     ============================================ -->
<div class="shop-header-section">
    <div class="container shop-info-wrapper">
        <img src="@(string.IsNullOrEmpty(Model.Shop.AvatarUrl) ? "/images/shop-placeholder.png" : Model.Shop.AvatarUrl)" 
             alt="@Model.Shop.ShopName" class="shop-avatar-large"
             onerror="this.src='https://placehold.co/150x150/000000/FFFFFF?text=SHOP'">
        
        <h1 class="shop-name">
            @Model.Shop.ShopName 
            <i class="bi bi-patch-check-fill shop-verified" title="Shop uy tín"></i>
        </h1>
        
        <div class="shop-description">
            @(string.IsNullOrEmpty(Model.Shop.Description) ? "Chào mừng bạn đến với cửa hàng của chúng tôi." : Model.Shop.Description)
        </div>
        
        <div class="shop-stats">
            <div class="stat-item">
                <div class="stat-value">@Model.Products.Count</div>
                <div class="stat-label">Sản phẩm</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">4.9/5</div>
                <div class="stat-label">Đánh giá</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">98%</div>
                <div class="stat-label">Phản hồi</div>
            </div>
        </div>
        
        <div class="shop-divider"></div>
        
        <div class="shop-contact">
            @if(!string.IsNullOrEmpty(Model.Shop.Phone)) {
                <div class="contact-item">
                    <i class="bi bi-telephone-fill"></i> @Model.Shop.Phone
                </div>
            }
            @if(!string.IsNullOrEmpty(Model.Shop.Address)) {
                <div class="contact-item">
                    <i class="bi bi-geo-alt-fill"></i> @Model.Shop.Address
                </div>
            }
        </div>
    </div>
</div>

<!-- ============================================
     PRODUCT LIST
     ============================================ -->
<div class="container shop-products-section">
    <div class="products-header">
        <h2 class="products-title">Tất cả sản phẩm</h2>
        <div class="filter-options">
            <select class="form-select form-select-sm" aria-label="Sắp xếp" style="width: auto; border-radius: 20px;">
                <option selected>Mới nhất</option>
                <option value="1">Giá tăng dần</option>
                <option value="2">Giá giảm dần</option>
                <option value="3">Bán chạy</option>
            </select>
        </div>
    </div>

    @if (Model.Products == null || !Model.Products.Any())
    {
        <div class="empty-shop-state">
            <div class="text-muted" style="font-size: 3rem; margin-bottom: 1rem;">
                <i class="bi bi-box-seam"></i>
            </div>
            <h4>Shop chưa có sản phẩm nào.</h4>
            <p class="text-muted">Vui lòng quay lại sau.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="product-grid">
            @foreach (var item in Model.Products)
            {
                var price = (item.Skus != null && item.Skus.Any()) ? item.Skus[0].GiaBan : 0;
                var imageUrl = (item.HinhAnh != null && item.HinhAnh.Any()) ? item.HinhAnh[0] : "/images/placeholder.png";
                
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="card-img-wrapper" style="height: 250px; overflow: hidden; position: relative;">
                            <a href="/ProductPage/Details/@item.Id">
                                <img src="@imageUrl" class="card-img-top" alt="@item.Ten" 
                                     style="width: 100%; height: 100%; object-fit: cover;"
                                     onerror="this.src='https://placehold.co/400x400?text=No+Image'">
                            </a>
                            <div class="quick-actions">
                                <button class="action-btn wishlist-btn" title="Yêu thích">
                                    <i class="bi bi-heart"></i>
                                </button>
                                <a href="/ProductPage/Details/@item.Id" class="action-btn" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title product-title text-truncate mb-2">
                                <a href="/ProductPage/Details/@item.Id" title="@item.Ten" class="text-dark text-decoration-none fw-bold">@item.Ten</a>
                            </h6>
                            <div class="mt-auto">
                                <p class="card-text text-danger fw-bold fs-5 mb-2">
                                    @(price > 0 ? price.ToString("N0") + " ₫" : "Liên hệ")
                                </p>
                                <a href="/ProductPage/Details/@item.Id" class="btn btn-outline-dark btn-sm w-100 rounded-pill btn-ripple">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation for stats
            const stats = document.querySelectorAll('.stat-value');
            stats.forEach((stat, index) => {
                stat.style.opacity = '0';
                stat.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    stat.style.transition = 'all 0.5s ease';
                    stat.style.opacity = '1';
                    stat.style.transform = 'translateY(0)';
                }, 300 + (index * 100));
            });
            
            // Stagger animation for products
            const products = document.querySelectorAll('.product-card');
            products.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.4s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 500 + (index * 50));
            });
        });
    </script>
}
